<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <form class="box" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <h1>Edit <%= campground.name %></h1>
            <input type="text" name="name" id="name" value="<%= campground.name %>" placeholder="Name" required>
            <input type="text" name="image" id="image" value="<%= campground.image %>" placeholder="Image URL" required>
            <input type="number" name="cost" id="cost" value="<%= campground.cost %>" placeholder="9.99" min="0.1" step="0.1" required>
            <input type="text" name="description" id="description" value="<%= campground.description %>" placeholder="Description">
            <button type="submit">Update!</button>
            <hr>
            <a class="back" href="/campgrounds">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>