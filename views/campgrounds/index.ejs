<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span <i id="tent" class="fas fa-campground"></i></span> Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the World</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                <form action="/campgrounds" method="GET" id="campground-search">
                    <div class="search-box">
                        <input class="search-txt" type="text" name="search" placeholder="Search Campgrounds..">
                        <a class="search-btn" href="#">
                            <i class="fas fa-search"></i>
                        </a>
                    </div>
                </form>
            </p>
        </div>
    </header>
    
    <div class="row text-center" id="campground-grid">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card card1">
                  <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title title1"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                </div>
            </div> 
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
